{
  "name": "valibot",
  "description": "The modular and TypeScript-first schema library",
  "version": "0.2.1",
  "license": "MIT",
  "author": "Fabian Hiller",
  "homepage": "https://valibot.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabian-hiller/valibot"
  },
  "keywords": [
    "modular",
    "typescript",
    "schema",
    "validation",
    "parsing",
    "bundle-size",
    "type-safe",
    "runtime"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "require": {
        "types": "./index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import":  {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      }
    },
    "./error": {
      "require": {
        "types": "./error.d.cts",
        "default": "./dist/error.cjs"
      },
      "import":  {
        "types": "./dist/error.d.ts",
        "default": "./dist/error.mjs"
      }
    },
    "./methods": {
      "require": {
        "types": "./methods.d.cts",
        "default": "./dist/methods.cjs"
      },
      "import":  {
        "types": "./dist/methods.d.ts",
        "default": "./dist/methods.mjs"
      }
    },
    "./schemas": {
      "require": {
        "types": "./schemas.d.cts",
        "default": "./dist/schemas.cjs"
      },
      "import":  {
        "types": "./dist/schemas.d.ts",
        "default": "./dist/schemas.mjs"
      }
    },
    "./transformations": {
      "require": {
        "types": "./transformations.d.cts",
        "default": "./dist/transformations.cjs"
      },
      "import":  {
        "types": "./dist/transformations.d.ts",
        "default": "./dist/transformations.mjs"
      }
    },
    "./utils": {
      "require": {
        "types": "./utils.d.cts",
        "default": "./dist/utils.cjs"
      },
      "import":  {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.mjs"
      }
    },
    "./validations": {
      "require": {
        "types": "./validations.d.cts",
        "default": "./dist/validations.cjs"
      },
      "import":  {
        "types": "./dist/validations.d.ts",
        "default": "./dist/validations.mjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "*.d.cts",
    "*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "playground": "unbuild --stub && tsc && node --experimental-specifier-resolution=node dist/source/playground.js",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts*\" && tsc --noEmit",
    "format": "prettier --write ./src",
    "format.check": "prettier --check ./src",
    "build": "unbuild && tsc",
    "publish": "npm publish"
  },
  "devDependencies": {
    "@types/eslint": "^8.40.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitest/coverage-v8": "^0.33.0",
    "eslint": "^8.43.0",
    "jsdom": "^22.1.0",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "vite": "^4.3.9",
    "vitest": "^0.33.0"
  }
}
